{
  "name": "horizon",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "lint": "stylelint --fix \"src/styles/**/*.scss\"",
    "prettier": "prettier --write \"src/styles/**/*.scss\"",
    "lint-check": "stylelint \"src/styles/**/*.scss\"",
    "prettier-check": "prettier --check \"src/styles/**/*.scss\""
  },
  "devDependencies": {
    "autoprefixer": "^10.1.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^5.0.1",
    "file-loader": "^6.2.0",
    "focus-visible": "^5.2.0",
    "husky": "^4.3.5",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "import-glob-loader": "^1.1.0",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.2",
    "node-sass": "^5.0.0",
    "normalize.scss": "^0.1.0",
    "postcss": "^8.2.1",
    "postcss-critical-css": "^3.0.6",
    "postcss-import": "^13.0.0",
    "postcss-loader": "^4.1.0",
    "postcss-pxtorem": "^5.1.1",
    "postcss-sort-media-queries": "^2.3.15",
    "prettier": "^2.2.1",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.8.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.18.0",
    "webpack": "^5.10.0",
    "webpack-cli": "^4.2.0"
  },
  "browserslist": [
    "> 1%",
    "ie > 9",
    "last 4 versions"
  ],
  "postcss": {
    "plugins": {
      "postcss-import": {},
      "postcss-critical-css": {
        "outputPath": "dist/main",
        "preserve": false
      },
      "postcss-sort-media-queries": {},
      "postcss-pxtorem": {
        "propList": [
          "font",
          "font-size",
          "letter-spacing",
          "width",
          "min-width",
          "max-width",
          "height",
          "min-height",
          "max-height",
          "margin",
          "margin-top",
          "margin-right",
          "margin-bottom",
          "margin-left",
          "padding",
          "padding-top",
          "padding-right",
          "padding-bottom",
          "padding-left"
        ],
        "minPixelValue": 2,
        "replace": true,
        "mediaQuery": true
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,scss,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  }
}
